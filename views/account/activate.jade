extends ../base

block content
  .page-header
    h3 Activate Account
  p 
    | Enter your 
    b activation code 
    | below to activate your account.
  .col-sm-8.col-sm-offset-2
    form(method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label.control-label(for='activationCode') Activation Code 
        input.form-control(type='text', name='activationCode', id='activationCode', placeholder='Activation Code', autofocus=true)
      .form-group
        button.btn.btn-primary(type='submit')
          i.fa.fa-key
          | Activate Account