doctype html
html
  head
    title #{title} - Eischied
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0') 
    link(rel='shortcut icon', href='faveicon.png') 
    != css('main')
  body
    include partials/nav
    .container
        include partials/flash
        div(ng-app="eischiedApp")
            block content
        p

    include partials/footer

    != js('application')
    != js('application_angular')
    script. 
        var angApp = angular.module("eischiedApp", ['ngRoute', 'ngResource', 'ui.bootstrap'])
        .constant('partialsPath', '/app/')
        .constant('_csrf', '!{_csrf}');
    != js('eischied_app')
        